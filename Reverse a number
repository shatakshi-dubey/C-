int main()
{
    int number, reversenumber=0, lastdigit;
    cout<<"Number: ";
    cin>>number;
    if(number==0)
    {
        cout<<"You have entered 0."<<endl;
    }
    
    else
    {
        while(number>0)
        {
        reversenumber=reversenumber*10;
        lastdigit=number%10;
        reversenumber=reversenumber+lastdigit;
        number=number/10;
        }
        cout<<"Reversed Number: "<<reversenumber;
    }

    return 0;
}
