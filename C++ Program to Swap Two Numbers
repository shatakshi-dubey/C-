//using temp variable

#include <iostream>

using namespace std;

int main()
{
    int a,b,temp;
    cout<<"Enter the two numbers:\n";
    cin>>a>>b;
    cout<<"Before swapping:\n";
    cout<<"a = "<<a<<" b = "<<b;
    cout<<"\nAfter swapping:\n";
    temp=a;
    a=b;
    b=temp;
    cout<<"a = "<<a<<" b = "<<b;
    
    return 0;
    
}


//using no temp variable

#include <iostream>

using namespace std;

int main()
{
    int a,b,temp;
    cout<<"Enter the two numbers:\n";
    cin>>a>>b;
    cout<<"Before swapping:\n";
    cout<<"a = "<<a<<" b = "<<b;
    cout<<"\nAfter swapping:\n";
    a=a+b;
    b=a-b;
    a=a-b;
    cout<<"a = "<<a<<" b = "<<b;
    
    return 0;
    
}
