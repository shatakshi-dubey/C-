int main()
{
    int number,i=0;
    cout<<"Enter number:"<<endl;
    cin>>number;
    
    if(number==0)
    cout<<"You have entered 0"<<endl;
    else{
        if(number<0)
        number=number*(-1);
    while(number>0)
    {
     number/=10;
     i++;
    }
    cout<<i<<" digits"<<endl;
    }
    return 0;
}
